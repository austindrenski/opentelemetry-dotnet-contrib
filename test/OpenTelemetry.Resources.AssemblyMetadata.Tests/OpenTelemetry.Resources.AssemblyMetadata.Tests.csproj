<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <!-- OmniSharp/VS Code requires TargetFrameworks to be in descending order for IntelliSense and analysis. -->
    <TargetFrameworks>$(SupportedNetTargets)</TargetFrameworks>
    <TargetFrameworks Condition="$(OS) == 'Windows_NT'">$(TargetFrameworks);$(NetFrameworkMinimumSupportedVersion)</TargetFrameworks>
    <Description>Unit test project for Assembly Metadata Detector for OpenTelemetry.</Description>
  </PropertyGroup>

  <ItemGroup>
    <AssemblyMetadata Include="otel:" Value="invalid" />
    <AssemblyMetadata Include="otel:some_attribute_with_empty" Value="" />
    <AssemblyMetadata Include="otel:some_attribute_with_value" Value="some_value" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="$(RepoRoot)\src\OpenTelemetry.SemanticConventions\Attributes\VcsAttributes.cs" LinkBase="Includes" />
    <Compile Include="$(RepoRoot)\test\Shared\SkipUnlessEnvVarFoundFactAttribute.cs" LinkBase="Includes" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="$(RepoRoot)\src\OpenTelemetry.Resources.AssemblyMetadata\OpenTelemetry.Resources.AssemblyMetadata.csproj" />
  </ItemGroup>

  <Import Project="$(RepoRoot)\src\OpenTelemetry.Resources.AssemblyMetadata\_.targets" />

</Project>
